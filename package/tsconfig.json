{
    "compilerOptions": {
        "target": "es6",
        "module": "system",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": false,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "./**/*.ts",
        "!./**/*.d.ts"
    ],
    "files": [
        "./index.ts"
    ]
}
